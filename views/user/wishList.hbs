<script >
        function remove(user,proId){
            console.log(user)
            $.ajax({
                url:'/wishlist',
                data:{
                    user:user,
                    proId:proId
                },
                method:'POST',
                success:(response)=>{
                   location.reload()
                }
            })
        }
</script>