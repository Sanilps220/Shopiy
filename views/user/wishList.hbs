<div class="col-md-12">
    <div class="cart-view-area" style="padding: 50px;">
        <div class="cart-view-table" style="padding: 30px; min-height: 350px;background-color: #F5F5F5;">
            <form action="#" method="">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th>Product</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Gender</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each wishList}}
                            <tr>
                                <td>
                                    <div class="remove btn btn-outline-" onClick="remove('{{this._id}}','{{this.item}}')" style="color: #ff0000;">
                                        <i class="bi bi-x-circle" ></i>
                                    </div>
                                </td>
                                <td>
                                    <a href="" style="text-decoration: none;">
                                    <img src="/product-images/{{this.product._id}}.jpg" alt="" style="width: 80px;
                                                          height: 100px;vertical-align: middle;" >
                                    </a>
                                </td>
                                <td><a href="" style="color:#f66;">{{this.product.name}} </a></td>
                                <td><a href="" style="color:rgb(26, 21, 21);">â‚¹{{this.product.price}}  </a></td>
                                <td><a href="" style="color:rgb(26, 21, 21);">{{this.quantity}}  </a></td>
                                <td><a href="">{{this.product.category}}</a></td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </form>
        </div>

    </div>
</div>

