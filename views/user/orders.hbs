</section>

<script type="text/javascript">
function pre(f){
  console.log(f)

  let date = document.getElementById("date").innerHTML()
  date = new Date(date) 
  document.getElementById("date").innerHTML() = date
}
 
  function cancelOrder(orderId){
    swal({
      title:"Are you sure?",
      text:"Cancel Order",
      icon:"warning",
      button:true,
      dangerMode: true,
    })
    .then((willMade)=>{
      if(willMade){
        $.ajax({
          url:'/cancelOrder',
          method:'POST',
          data:{
            orderId:orderId            
            },
          success:(result)=>{
            if(result.status){
              swal({text:"Order Canceled",
              icon:"success",
              });
            }
            location.href='/orders'
          }
        })
      }
    })
  }
</script>